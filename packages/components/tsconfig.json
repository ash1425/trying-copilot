{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/types/",
    "allowUmdGlobalAccess": true,
    "noEmit": false
  },
  "include": ["./src/types/*.d.ts", "./src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/*.spec.*",
    "**/*.stories.*"
  ],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
